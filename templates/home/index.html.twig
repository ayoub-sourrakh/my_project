{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Page d'accueil</h1>
    
    {% if user %}
        <p>Vous êtes connecté.</p>
        <a href="{{ path('app_logout') }}">Se déconnecter</a>
    {% else %}
        <p>Vous n'êtes pas connecté.</p>
        <a href="{{ path('app_login') }}">Se connecter</a>
    {% endif %}
{% endblock %}
